@using Microsoft.AspNetCore.Components.Forms

<div class="block-game-container">
    <div class="gameboard">
        @if (Puzzle != null && Puzzle.Rows != null)
        {
            <table>
                @foreach (var rows in Puzzle.Rows)
                {
                    <tr>
                        @foreach (var cell in rows.Cells)
                        {

                            <td class="game-cell">
                                @if (cell != null)
                                {
                                    <button class="cell-button" @onclick="() => ClickCell(cell.X, cell.Y)">
                                        <img src="@cell.ImageUrl" />
                                    </button>
                                }
                            </td>

                        }
                    </tr>
                }
            </table>
        }
        else
        {
            <p>Loading...</p>
        }
    </div>

    <div class="game-info">
        <h4>Number of Moves: @NumberOfMoves</h4>
        @if (Winner)
        {
            <h3 class="winner-text">You Won!</h3>
        }
    </div>
</div>

