@page "/gamebox"
@rendermode InteractiveServer
@using global::GameBox.BlockGame
@using global::GameBox.PlagueDoctor

<h3>Game Box</h3>

<div class="game-menu">
    <button @onclick="() => OpenGame(nameof(GameBoard))">Block Puzzle</button>
    <button @onclick="() => OpenGame(nameof(PlagueDoctor))">Plague Doctor</button>
</div>

@if (!string.IsNullOrEmpty(selectedGame))
{
    <div class="game-overlay">
        <div class="game-container">
            <button class="close-button" @onclick="CloseGame">✕</button>
            <div class="game-content">
                @if (selectedGame == nameof(GameBoard))
                {
                    <GameBoard />
                }
                else if (selectedGame == nameof(PlagueDoctor))
                {
                    <PlagueDoctor />
                }
            </div>
        </div>
    </div>
}

@code {
    private string? selectedGame;

    private void OpenGame(string gameName)
    {
        selectedGame = gameName;
    }

    private void CloseGame()
    {
        selectedGame = null;
    }
}


